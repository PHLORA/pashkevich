@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item active">
                @Html.ActionLink(User.Identity.GetUserName(), "Index", "Profile", new { id = User.Identity.GetUserId() }, htmlAttributes: new { @class = "nav-link" })
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item active">
            @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { @id = "registerLink", @class = "nav-link" })
        </li>
        <li class="nav-item active">
            @Html.ActionLink("Войти", "Login", "Account", routeValues: null, htmlAttributes: new { @id = "registerLink", @class = "nav-link" })
        </li>
    </ul>
}